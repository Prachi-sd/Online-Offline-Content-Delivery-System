<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iexp" >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="173dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="i-explorer - a National Level Competition on Astronomy and Science’’. This competition will commence every year with different themes. Separate competitions shall be conducted for each subject i.e Astronomy and Science. We are making this available in various languages. Currently it’s available in Marathi and English. Participants can opt from any of these languages. We are trying to bring this in more and more regional languages also."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="normal|bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:text=" "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textSize="20sp"
                android:textColor="#FFFFFF"/>

            <Button
                android:text="Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button13"
                style="@style/Widget.AppCompat.Button"
                android:background="?android:attr/detailsElementBackground" />

            <TextView
                android:text="Subjects of Competitions:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"/>

            <TextView
                android:text="1.	Astronomy, dark skies (Light and air pollution) and Sustainable Tourism"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textStyle="normal|bold"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textAlignment="center" />

            <TextView
                android:text="Click here to download syllabus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView63"
                android:textStyle="normal|italic"
                android:textColor="@android:color/holo_blue_bright"
                android:textAlignment="center" />

            <TextView
                android:text="2.	Aquatic Bio-Diversity, pollution and Sustainable Tourism"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textStyle="normal|bold"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textAlignment="center" />

            <TextView
                android:text="Click here to download syllabus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView64"
                android:textStyle="normal|italic"
                android:textColor="@android:color/holo_blue_bright"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textSize="28sp" />

            <TextView
                android:text="Click Here To Register through web link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:onClick="onClick"
                android:clickable="true"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:text="Click here for App based Registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:background="?android:attr/detailsElementBackground"
                style="@style/Widget.AppCompat.Button" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>